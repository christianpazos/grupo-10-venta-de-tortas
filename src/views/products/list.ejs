<%- include("../includes/head") %> 

<body>
<!-- Header -->
<%- include("../includes/header") %> 
<!-- Fin del Header -->
<!-- Main -->
<main>
  <!-- Section -->
  <nav id="categorias">

    <% categories.forEach(categorias => { %>
      <a href="/productos/categories/<%= categorias.id %>"><%= categorias.nombre %></a>
      <% }) %> 
  </nav>
<section class="productos">
  <h3 class="titulares">¡No llegues a esa ocasión especial sin una SUPER TORTA!</h3>

  <% productos.forEach(producto => { %>
    <article>
            <figure><img src="/<%= producto.imagen%>" alt=""></figure>
            <section>
              <h3 class="descripciones"> <%= producto.nombre %></h3>
              <p class="precios"> $<%= producto.precio %></p>
              <a href='/productos/detalle/<%= producto.id %>'  class="botonproductos">Ver más info</a>
            </section>
    </article>        
  <% }) %> 

</section>
</main>
  <!-- Footer -->
<%- include("../includes/footer") %> 
</body>
<%- include("../includes/head") %> 

<body>
<!-- Header -->
<%- include("../includes/header") %> 
<!-- Fin del Header -->
<!-- Main -->
<main>

<h3 class="titulares">¿Querés modificar alguna torta?</h3>
<!-- Formularios -->

<form action="/productos/editar/<%= productos.id %>?_method=PUT" method="POST" class="formularioRegistro" enctype="multipart/form-data">
    
  <fieldset class="controlFormulario">
      <input class="control" type="text" name="nombre" value="<%= productos.nombre %>">
    </fieldset>

    <section class="controlFormulario">
      <% categories.forEach(category => { %>
      
      <fieldset class="contenedorItems">
        <% if (category.id == productos.category_id) { %>
          <input type="radio" name="category_id" value="<%= locals.data ? data.category_id : null %>" checked id="<%= category.id %>">
          <% } else { %>
          <input type="radio" name="category_id" value="<%= locals.data ? data.category_id : null %>" id="<%= category.id %>">
        <% } %>
          <label for="<%= category.id %>"><%= category.nombre %> </label>
      </fieldset>
      <% }) %>
    </section>
    <fieldset class="controlFormulario" id="fotoTorta">
    <h3>Foto actual del producto</h3>
    <figure>
      <img src="/<%=productos.imagen%>" alt="imagen BANANASPLIT" value="">
    </figure>
    <h4>Subir una nueva imagen?</h4>
      <input type="file" name="products" id="Subirfoto" >
    </fieldset>

    <fieldset class="controlFormulario">
      <input class="control" type="number" name="precio" value="<%= locals.data ? data.precio :  productos.precio  %>">
    </fieldset>

    <fieldset class="controlFormulario">
      <input class="control" type="text" name="descripcion" value="<%= locals.data ? data.descripcion :  productos.descripcion %>">
    </fieldset>

  <section id="contenedorBotones">
  <button class="button" type="submit">Editar Torta</button>
  <button class="button" type="reset">Borrar</button>
  </section>
</form>
<!-- Cierre del Form -->
</main>
<!-- Footer -->
<%- include("../includes/footer") %> 
</body>